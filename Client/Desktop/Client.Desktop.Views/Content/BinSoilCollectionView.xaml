                        </StackPanel>
                    </Expander>
                    <Border Background="{DynamicResource MaterialDesignDivider}"
                            Height="1"
                            HorizontalAlignment="Stretch"
                            SnapsToDevicePixels="True" 
                    />
                </StackPanel>
            </materialDesign:Card>-->


        <GroupBox Grid.Row="2"
                  Grid.Column="1"
                  Header="Linen"
                  Margin="16"
                  >


            <DataGrid ItemsSource="{Binding StaffsLoaded}"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      IsReadOnly="True"
                      HorizontalAlignment="Stretch"
                      IsTextSearchEnabled="True"
                      CanUserAddRows="False"
                      AutoGenerateColumns="False"
                      HorizontalContentAlignment="Stretch"
            >

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding StaffId}" Width="*" />
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="4*" />

                    <materialDesign:DataGridComboBoxColumn
                        Header="Department"
                        SelectedValueBinding="{Binding DepartmentId}"
                        DisplayMemberPath="Name"
                        SelectedValuePath="Id"
                        Width="2*"
                        ItemsSourceBinding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.Departments}"
                    />

                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

    </Grid>
</UserControl>

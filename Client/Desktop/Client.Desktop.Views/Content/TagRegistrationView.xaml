<UserControl x:Class="Client.Desktop.Views.Content.TagRegistrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:content="clr-namespace:Client.Desktop.ViewModels.Content;assembly=Client.Desktop.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance content:TagRegistrationViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverterKey"></BooleanToVisibilityConverter>
    </UserControl.Resources>

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding InitializeCommand}"/>
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid Margin="5,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
           
        <Grid Grid.Row="1" Grid.Column="1" Margin="10,0" Name="LinenWindow">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>                                                        
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Linen Commands -->
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                <Button Content="New" Command="{Binding NewLinenCommand}"/>
                <Button Content="Edit" Command="{Binding EditLinenCommand}"/>
                <Button Content="Delete" Command="{Binding DeleteLinenCommand}"/>
            </StackPanel>

            <!-- Filter fields -->
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">

                <ComboBox ItemsSource="{Binding Clients}" 
                          SelectedValue="{Binding SelectedClient}" 
                          DisplayMemberPath="Name"
                          materialDesign:HintAssist.Hint="Client"
                          materialDesign:TextFieldAssist.HasClearButton="True"
                          />                
                
                <ComboBox ItemsSource="{Binding SortedDepartments}" 
                          SelectedValue="{Binding SelectedDepartment}" 
                          DisplayMemberPath="Name"
                          materialDesign:HintAssist.Hint="Department"
                          materialDesign:TextFieldAssist.HasClearButton="True"
                          />

                <ComboBox ItemsSource="{Binding SortedStaffs}" 
                          SelectedValue="{Binding SelectedStaff}" 
                          DisplayMemberPath="Name"
                          materialDesign:HintAssist.Hint="Staff"
                          materialDesign:TextFieldAssist.HasClearButton="True"/>

                <TextBox Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                         materialDesign:HintAssist.Hint="Search"
                         FontSize="20"
                />

            </StackPanel>

            <!-- Linens -->
            <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Header="Linen">

                <DataGrid Height="Auto"
                          ItemsSource="{Binding SortedLinens}"
                          SelectedItem="{Binding SelectedClientLinen}"
                          SelectionMode="Single"
                          IsReadOnly="True"
                          HorizontalAlignment="Stretch"
                          IsTextSearchEnabled="True"
                          CanUserAddRows="False"
                          AutoGenerateColumns="False"
                          HorizontalContentAlignment="Stretch"
                          >

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}"  IsReadOnly="True" />
                        <DataGridTextColumn Header="Linen" Binding="{Binding OriginalObject.MasterLinenEntity.Name}" Width="3*" IsReadOnly="True" />

                        <!--StaffID-->

                        <materialDesign:DataGridComboBoxColumn
                            Header="Staff Id"
                            Width="*"
                            SelectedValueBinding="{Binding StaffId}"
                            DisplayMemberPath="OriginalObject.StaffDetailsEntity.StaffId"
                            SelectedValuePath="Id"
                            materialDesign:IsEditable="False"
                            ItemsSourceBinding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.Departments}"
                        />

                        <!--Staff-->

                        <materialDesign:DataGridComboBoxColumn
                            Header="Staff"
                            Width="2*"
                            SelectedValueBinding="{Binding StaffId}"
                            DisplayMemberPath="OriginalObject.StaffDetailsEntity.Name"
                            SelectedValuePath="Id"
                            ItemsSourceBinding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.Departments}"
                        />

                        <!--Department-->

                        <materialDesign:DataGridComboBoxColumn
                            Header="Department"
                            Width="2*"

                            SelectedValueBinding="{Binding DepartmentId}"
                            DisplayMemberPath="Name"
                            SelectedValuePath="Id"
                            ItemsSourceBinding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.Departments}"
                        />

                        <!--Client-->
                        <materialDesign:DataGridComboBoxColumn
                            Header="Client"
                            Width="2*"
                            SelectedValueBinding="{Binding ClientId}"
                            DisplayMemberPath="ShortName"
                            SelectedValuePath="Id"
                            ItemsSourceBinding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.Clients}"
                        />

                        <DataGridTextColumn Header="Tag" Binding="{Binding Tag}" Width="3*" />

                    </DataGrid.Columns>
                </DataGrid>

            </GroupBox>


        </Grid>

        <ContentPresenter Grid.Row="1" Grid.Column="2" Margin="10,0" Content="{Binding Reader}" />
             
    </Grid>
</UserControl>

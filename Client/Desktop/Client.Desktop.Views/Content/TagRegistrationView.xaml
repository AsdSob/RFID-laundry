<UserControl x:Class="Client.Desktop.Views.Content.TagRegistrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:content="clr-namespace:Client.Desktop.ViewModels.Content;assembly=Client.Desktop.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance content:TagRegistrationViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverterKey"></BooleanToVisibilityConverter>
    </UserControl.Resources>

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding InitializeCommand}"/>
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid Margin=" 5,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
           

        <Grid Grid.Column="0" Grid.Row="1" Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Clients -->
            <GroupBox Grid.Row="0" Grid.Column="0" Header="Client" Padding="10">

                <ComboBox ItemsSource="{Binding Clients}" SelectedValue="{Binding SelectedClient}" DisplayMemberPath="Name"/>

            </GroupBox>

            <!-- Departments -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="Departments" Padding="10">

                <DataGrid Height="Auto"
                          ItemsSource="{Binding SortedDepartments}"
                          SelectedItem="{Binding SelectedDepartment}"
                          SelectionMode="Single"
                          VerticalScrollBarVisibility="Visible"
                          AllowDrop="True" 
                          IsReadOnly="True"
                          HorizontalAlignment="Stretch"
                          AutoGenerateColumns="False"
                          IsTextSearchEnabled="True"
                          IsTextSearchCaseSensitive="False">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>

            </GroupBox>


            <!-- Staff -->
            <GroupBox Grid.Row="2" Grid.Column="0" Header="Staff" Padding="10">
                
                <DockPanel>

                    <!-- Staff Commands -->
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                            <Button Margin = "5" Padding="5"  Content="New" Command="{Binding AddStaffCommand}"/>
                            <Button Margin = "5" Padding="5"  Content="Edit" Command="{Binding EditStaffCommand}"/>
                            <Button Margin = "5" Padding="5"  Content="Delete" Command="{Binding DeleteStaffCommand}"/>
                    </StackPanel>

                    <DataGrid Height="Auto"
                              DockPanel.Dock="Bottom"
                              ItemsSource="{Binding SortedStaff}"
                              SelectedItem="{Binding SelectedStaff}"
                              SelectionMode="Single"
                              VerticalScrollBarVisibility="Visible"
                              AllowDrop="True" 
                              IsReadOnly="True"
                              HorizontalAlignment="Stretch"
                              AutoGenerateColumns="False"
                              IsTextSearchEnabled="True"
                              IsTextSearchCaseSensitive="False">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding StaffId}" Width="*" />
                            <DataGridTextColumn Header="Staff" Binding="{Binding Name}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>

            </GroupBox>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" Margin="10,0" Name="LinenWindow">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Linen Commands -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button Margin = "5" Padding="10,5"  Content="New" Command="{Binding NewLinenCommand}"/>
                <Button Margin = "5" Padding="10,5"  Content="Edit" Command="{Binding EditLinenCommand}"/>
                <Button Margin = "5" Padding="10,5"  Content="Delete" Command="{Binding DeleteLinenCommand}"/>
            </StackPanel>

            <!-- Linens -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="Linen">

                <DataGrid Height="Auto"
                          ItemsSource="{Binding SortedLinens}"
                          SelectedItem="{Binding SelectedClientLinen}"
                          SelectionMode="Single"
                          VerticalScrollBarVisibility="Visible"
                          AllowDrop="True" 
                          IsReadOnly="False"
                          HorizontalAlignment="Stretch"
                          AutoGenerateColumns="False"
                          IsTextSearchEnabled="True"
                          CanUserAddRows="False"
                          HorizontalContentAlignment="Stretch"
                          IsTextSearchCaseSensitive="False">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}"  IsReadOnly="True" />

                        <DataGridComboBoxColumn Header="Linen"
                                                DisplayMemberPath="Name"
                                                SelectedValuePath="Id"
                                                Width="*"
                                                SelectedValueBinding="{Binding MasterLinenId}">
                            <DataGridComboBoxColumn.ElementStyle>
                                <Style TargetType="{x:Type ComboBox}">
                                    <Setter Property="ItemsSource" Value="{Binding Path=DataContext.MasterLinens, ElementName=LinenWindow}" />
                                </Style>
                            </DataGridComboBoxColumn.ElementStyle>
                            <DataGridComboBoxColumn.EditingElementStyle>
                                <Style TargetType="{x:Type ComboBox}">
                                    <Setter Property="ItemsSource" Value="{Binding Path=DataContext.MasterLinens, ElementName=LinenWindow}" />
                                </Style>
                            </DataGridComboBoxColumn.EditingElementStyle>
                        </DataGridComboBoxColumn>

                        <DataGridTextColumn Header="Tag" Binding="{Binding Tag}" Width="2*"/>

                    </DataGrid.Columns>
                </DataGrid>

            </GroupBox>


        </Grid>

        <Grid Grid.Row="1" Grid.Column="2" Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Search Tag -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="Tag Search">
                <DockPanel>
                    <Button Content="search.."
                            DockPanel.Dock="Right"
                            Command="{Binding  SearchTagCommand}"
                            Width="70"
                            Margin = "5"
                            Padding="10,2"
                    />

                    <TextBox DockPanel.Dock="Left" Text="{Binding SearchingTag}" VerticalContentAlignment="Center"/>
                </DockPanel>
            </GroupBox>

            <!-- RFID\Reader Commands -->
            <DockPanel Grid.Row="0"
                        Grid.Column="0"
                       >

                <!-- Start/Stop-->
                <Button DockPanel.Dock="Right"
                        Content="{Binding RfidReaderWindow.StartStopButton}"
                        Command="{Binding RfidReaderWindow.StartStopReaderCommand}"
                        Width="70"
                        Margin = "5"
                        Padding="10,2"
                />

                <!-- Connect/Disconnect-->
                <Button DockPanel.Dock="Right"
                        Content="{Binding RfidReaderWindow.ConnectDisconnectButton}"
                        Command="{Binding RfidReaderWindow.ConnectReaderCommand}"
                        Width="70"
                        Margin = "5"
                        Padding="10,2"
                />

                <ComboBox DockPanel.Dock="Left" ItemsSource="{Binding RfidReaderWindow.RfidReaders}" SelectedValue="{Binding RfidReaderWindow.SelectedRfidReader}" DisplayMemberPath="Name"/>

            </DockPanel>

            <GroupBox Grid.Column="0" Grid.Row="2" Header="Tags">
                <DataGrid AutoGenerateColumns="False"
                          Height="NaN"
                          ItemsSource="{Binding RfidReaderWindow.Tags}"
                          SelectedItem="{Binding SelectedTag, UpdateSourceTrigger=PropertyChanged}"
                          VerticalScrollBarVisibility="Visible"
                          AllowDrop="True" 
                          HorizontalAlignment="Stretch"
                          EnableRowVirtualization="True" 
                          IsReadOnly="True" 
                          IsTextSearchCaseSensitive="False"
                >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Antenna" Binding="{Binding Path=Item1}" />
                        <DataGridTextColumn Header="Tag" Binding="{Binding Path=Item2}" />
                    </DataGrid.Columns>

                </DataGrid>
            </GroupBox>

            <GroupBox Grid.Row="3" Grid.Column="0">
                
                <!-- Find Tag -->
                <!--<Button Content="Find Selected Tag"
                            Command="{Binding FindTagCommand}"
                            Margin = "5"
                            Padding="10,2"
                />-->

                <!-- Select tag-->
                <Button Content="Select"
                        DockPanel.Dock="Right"
                        Command="{Binding UseTagCommand}"
                        Margin = "5"
                        Padding="10,2"
                        Height="50"
                        FontSize="30"
                />
            </GroupBox>

        </Grid>
    </Grid>
</UserControl>

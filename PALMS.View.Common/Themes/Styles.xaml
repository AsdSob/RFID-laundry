<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:converters="clr-namespace:PALMS.View.Common.Converters">

    <!-- converters -->
    <dxmvvm:BooleanNegationConverter x:Key="BooleanNegationConverter"/>
    <converters:BoolToVisibilityConvertor x:Key="BoolToVisibilityConverter"/>
    <converters:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter"/>

    <Thickness x:Key="LightRightMargin">0,0,15,0</Thickness>
    <Thickness x:Key="RightMargin">0,0,30,0</Thickness>
    <Thickness x:Key="ContentMargin">30,20</Thickness>
    <Thickness x:Key="TopBottomContentMargin">0,20</Thickness>
    <Thickness x:Key="LeftRightContentMargin">30,0</Thickness>
    <Thickness x:Key="LightContentMargin">15,10</Thickness>
    <Thickness x:Key="LeftButtonMargin">10,0,0,0</Thickness>

    
</ResourceDictionary>